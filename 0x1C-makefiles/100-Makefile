# Advanced Makefile for "school" executable

CC = gcc
SRC = main.c school.c
NAME = school
CFLAGS = -Wall -Werror -Wextra -pedantic

all: $(NAME)

$(NAME): $(SRC)
	$(CC) $(CFLAGS) $(SRC) -o $(NAME)

clean:
	$(RM) $(NAME) *~

oclean:
	@if [ -f $(wildcard *.o) ]; then $(RM) $(wildcard *.o); fi

fclean: clean oclean

re: fclean all
