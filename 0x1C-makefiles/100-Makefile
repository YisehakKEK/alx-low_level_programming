# Advanced Makefile for "school" executable

CC = gcc
SRC = main.c school.c
NAME = school
CFLAGS = -Wall -Werror -Wextra -pedantic

all: $(NAME)

$(NAME):
	$(CC) $(CFLAGS) $(SRC) -o $(NAME)

clean:
	$(RM) $(NAME) *~

oclean:
	$(RM) $(filter %.o, $(wildcard *.o))

fclean: clean oclean

re: fclean all

main.o: main.c m.h
school.o: school.c m.h
